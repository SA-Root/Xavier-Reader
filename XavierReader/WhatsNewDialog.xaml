<ContentDialog
    x:Class="XavierReader.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XavierReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="About Xavier Reader"
    PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" 
    HorizontalContentAlignment="Stretch" 
    VerticalContentAlignment="Stretch" 
    HorizontalAlignment="Center" 
    VerticalAlignment="Center" CornerRadius="8,8,8,8"
    DefaultButton="Primary" 
    Background="{ThemeResource SystemControlAcrylicWindowBrush}" 
    SizeChanged="ContentDialog_SizeChanged">
    <local:WhatsNewPage x:Name="WNPage"/>
</ContentDialog>
